<style>
  .main-container {
    background: #121212;
    padding: 14px;
    max-width: 600px;
  }

  h1 {
    color: #fff;
    font-size: 20px;
    text-align: center;

  }

  .message-content {
    padding: 16px;
    margin: 14px auto;
    border-radius: 14px;
    background: #202024;
    font-family: Arial, Helvetica, sans-serif;
    font-size: 18px;
    line-height: 21px;
    color: #fff;
  }

  a {
    text-decoration: underline;
    color: #fff;
    transition: all 0.3s;
  }

  a:hover {
    color: #ddd;
  }
